# Crée un dossier local de certificats dans BuildKit rootless
docker exec buildx_buildkit_arm-builder0 sh -lc "mkdir -p ~/.local/share/ca-certificates"

# Copie ton CA dans ce dossier
docker cp cacert.pem buildx_buildkit_arm-builder0:/home/user/.local/share/ca-certificates/cacert.pem

# Concatène le CA avec la trust chain lue par Go TLS
docker exec buildx_buildkit_arm-builder0 sh -lc \
  "cat ~/.local/share/ca-certificates/cacert.pem >> /etc/ssl/cert.pem 2>/dev/null || true"

# Redémarre BuildKit pour recharger les certificats
docker restart buildx_buildkit_arm-builder0