#!/bin/bash

# Define variables
ENDPOINT_URL="https://your-s3-compatible-service-endpoint"
BUCKET_NAME="your-bucket-name"
FILE_PATH="/path/to/your/file"
FILE_KEY="your-desired-file-key"
ACCESS_KEY="your-access-key-id"
SECRET_KEY="your-secret-access-key"
REGION="your-region-name"

# Export credentials (optional if not already configured globally)
export AWS_ACCESS_KEY_ID=${ACCESS_KEY}
export AWS_SECRET_ACCESS_KEY=${SECRET_KEY}
export AWS_DEFAULT_REGION=${REGION}

# Upload the file
aws s3 cp "${FILE_PATH}" s3://"${BUCKET_NAME}"/"${FILE_KEY}" --endpoint-url "${ENDPOINT_URL}"

echo "File ${FILE_PATH} uploaded to ${BUCKET_NAME} as ${FILE_KEY}"
